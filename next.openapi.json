{
  "openapi": "3.0.0",
  "info": {
    "title": "BaseApp Next.js Fullstack Template",
    "version": "1.0.0",
    "description": "This is the OpenAPI specification for your project."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "defaultResponseSet": "common",
  "responseSets": {
    "common": []
  },
  "errorConfig": {
    "template": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "{{ERROR_MESSAGE}}"
        },
        "code": {
          "type": "string",
          "example": "{{ERROR_CODE}}"
        }
      }
    },
    "codes": {}
  },
  "apiDir": "./app/api",
  "schemaDir": "./app",
  "schemaType": "zod",
  "docsUrl": "api-docs",
  "ui": "scalar",
  "outputFile": "openapi.json",
  "outputDir": "./public",
  "includeOpenApiRoutes": false,
  "debug": false
}
